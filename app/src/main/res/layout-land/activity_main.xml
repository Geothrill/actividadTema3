<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="@dimen/width_horizontal_group"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtName"
            android:layout_width="@dimen/width_horizontal_textarea"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/txtName"
            android:inputType="textPersonName"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/txtSurname"
            android:layout_width="@dimen/width_horizontal_textarea"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/txtSurname"
            android:inputType="textPersonName"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/width_horizontal_group"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtNumber"
            android:layout_width="@dimen/width_horizontal_textarea"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/txtNumber"
            android:inputType="number"
            android:textColor="@color/black"/>

        <Switch
            android:id="@+id/hasChildren"
            android:layout_width="@dimen/width_horizontal_switch"
            android:layout_height="wrap_content"
            android:text="@string/hasChildren"
            android:textColor="@color/black" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="@dimen/width_horizontal_group"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black">

        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="@dimen/width_horizontal_rb"
            android:layout_height="wrap_content"
            android:text="@string/rbFemale"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="@dimen/width_horizontal_rb"
            android:layout_height="wrap_content"
            android:text="@string/rbMale"
            android:textColor="@color/black"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="@dimen/width_horizontal_group"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textColor="@color/black">

        <TextView
            android:id="@+id/civilStat"
            android:layout_width="@dimen/width_horizontal_textarea"
            android:layout_height="wrap_content"
            android:text="@string/civilStat" />

        <Spinner
            android:id="@+id/mcStatus"
            android:layout_width="@dimen/width_horizontal_textarea"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="@dimen/width_horizontal_result"
        android:layout_height="wrap_content"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/width_horizontal_group"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:textColor="@color/black">

        <Button
            android:id="@+id/reset"
            android:layout_width="@dimen/width_horizontal_button"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reset"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/send"
            android:layout_width="@dimen/width_horizontal_button"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/send"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>